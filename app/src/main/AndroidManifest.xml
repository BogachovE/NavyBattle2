<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.navybattle"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="17"
        android:targetSdkVersion="24" />

    <uses-permission android:name="android.permission.VIBRATE"/>
    
    <application
        android:name="com.example.navybattle.GlobalSettingsVariables"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.example.navybattle.AgainstComputer"
            android:label="@string/title_activity_against_computer"
            android:screenOrientation="landscape" >
        </activity>
        <activity
            android:name="com.example.navybattle.Main"
            android:label="@string/app_name"
            android:screenOrientation="landscape" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.navybattle.Against_Computer"
            android:label="@string/title_activity_against__computer" >
        </activity>
        <activity
            android:name="com.example.navybattle.Preferences"
            android:screenOrientation="landscape"
            android:label="@string/title_activity_preferences" >
        </activity>
         <activity
            android:name="com.example.navybattle.Settings"
            android:label="@string/title_activity_settings"
            android:screenOrientation="landscape" >
        </activity>
        <activity
            android:name="com.example.navybattle.ShipPlacement"
            android:screenOrientation="landscape"
            android:label="@string/title_activity_ship_placement" >
        </activity>
    </application>

</manifest>
